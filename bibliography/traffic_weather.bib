@article{chenAssociationAmbientTemperatures2023,
  title = {Association between Ambient Temperatures and Injuries: A Time Series Analysis Using Emergency Ambulance Dispatches in {{Chongqing}}, {{China}}},
  author = {Chen, Z.-Y. and Hu, H. and Yang, J. and Xing, D.-G. and Deng, X.-Y. and Zou, Y. and He, Y. and Chen, S.-J. and Wang, Q.-T. and An, Y.-Y. and Chen, Y. and Liu, H. and Tan, W.-J. and Zhou, X.-Y. and Zhang, Y.},
  date = {2023},
  journaltitle = {Environmental Health and Preventive Medicine},
