@article{praharajAssessingTrustworthinessCrowdsourced2021,
  title = {Assessing {{Trustworthiness}} of {{Crowdsourced Flood Incident Reports Using Waze Data}}: {{A Norfolk}}, {{Virginia Case Study}}},
