  keywords = {Risk assessment,Societal impacts,Transportation meteorology}
}

@article{bondesousaRoadTrafficAccidents2016,
  title = {Road Traffic Accidents and Self-Reported {{Portuguese}} Car Driver's Attitudes, Behaviors, and Opinions: {{Are}} They Related?},
