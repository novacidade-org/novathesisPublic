@article{lanCognitivePerformanceWas2022,
  title = {Cognitive Performance Was Reduced by Higher Air Temperature Even When Thermal Comfort Was Maintained over the 24–28°{{C}} Range},
  author = {Lan, Li and Tang, Jieyu and Wargocki, Pawel and Wyon, David P and Lian, Zhiwei},
