@article{pfeifrothSARAH3SatellitebasedClimate2024,
  title = {{{SARAH-3}} – Satellite-Based Climate Data Records of Surface Solar Radiation},
  author = {Pfeifroth, Uwe and Drücke, Jaqueline and Kothe, Steffen and Trentmann, Jörg and Schröder, Marc and Hollmann, Rainer},
