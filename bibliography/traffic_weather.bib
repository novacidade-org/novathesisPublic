@article{nofalSeasonalVariationWeather1997,
  title = {Seasonal Variation and Weather Effects on Road Traffic Accidents in {{Riyadh City}}},
  author = {family=Nofal, given=FH, given-i=FH and family=Saeed, given=AAW, given-i=AAW},
