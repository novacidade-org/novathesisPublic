  author = {Liang, Mingming and Min, Min and Guo, Xianwei and Song, Qiuxia and Wang, Hao and Li, Ning and Su, Wanying and Liang, Qiwei and Ding, Xiuxiu and Ye, Pengpeng and Duan, Leilei and Sun, Yehuan},
  date = {2022-07-01},
  journaltitle = {Environmental Science and Pollution Research},
  shortjournal = {Environ Sci Pollut Res},
