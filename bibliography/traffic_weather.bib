  keywords = {BIAS CORRECTION,Climate change,Climate means and extremes,DAILY PRECIPITATION,DISTRIBUTIONS,EURO-CORDEX,HIGH-RESOLUTION PROJECTIONS,MAXIMUM TEMPERATURE,MODEL,Multi-variable ensemble,Portugal,Regional climate models,SENSITIVITY,SIMULATIONS,STORM TRACKS}
