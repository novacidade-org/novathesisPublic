@article{limaMultivariableConstrainedEnsemble2023a,
  title = {A Multi-Variable Constrained Ensemble of Regional Climate Projections under Multi-Scenarios for {{Portugal-Part I}}: {{An}} Overview of Impacts on Means and Extremes},
  author = {family=Lima, given=DCA, given-i=DCA and Lemos, G and family=Bento, given=VA, given-i=VA and Nogueira, M and family=Soares, given=PMM, given-i=PMM},
