@article{reidsmaEconomicImpactsClimatic2009,
  title = {Economic Impacts of Climatic Variability and Subsidies on {{European}} Agriculture and Observed Adaptation Strategies},
  author = {Reidsma, P. and Oude Lansink, A. and Ewert, F.},
