@article{marinaccioNationwideEpidemiologicalStudy2019,
  title = {Nationwide Epidemiological Study for Estimating the Effect of Extreme Outdoor Temperature on Occupational Injuries in {{Italy}}},
  author = {Marinaccio, Alessandro and Scortichini, Matteo and Gariazzo, Claudio and Leva, Antonio and Bonafede, Michela and family=Donato, given=Francesca K., prefix=de' , useprefix=true and Stafoggia, Massimo and Viegi, Giovanni and Michelozzi, Paola and Carla, Ancona and Paola, Angelini and Stefania, Argentini and Sandra, Baldacci and Lucia, Bisceglia and Sergio, Bonomo and Laura, Bonvicini and Serena, Broccoli and Giuseppe, Brusasca and Simone, Bucci and Giuseppe, Calori and Giuseppe, Carlino and Achille, Cernigliaro and Antonio, Chieti and Salvatore, Fasola and Sandro, Finardi and Francesco, Forastiere and Claudia, Galassi and Paolo, Giorgi Rossi and Stefania, La Grutta and Gaetano, Licitra and Sara, Maio and Enrica, Migliore and Antonino, Moro and Alessandro, Nanni and Marta, Ottone and Nicola, Pepe and Paola, Radice and Andrea, Ranzi and Matteo, Renzi and Salvatore, Scondotto and Camillo, Silibello and Roberto, Sozzi and Gianni, Tinarelli and Francesco, Uboldi},
  date = {2019-12-01},
  journaltitle = {Environment International},
  shortjournal = {Environment International},
  volume = {133},
  pages = {105176},
  issn = {0160-4120},
  doi = {10.1016/j.envint.2019.105176},
  url = {https://www.sciencedirect.com/science/article/pii/S0160412019318410},
  urldate = {2025-10-20},
  abstract = {Background Despite the relevance for occupational safety policies, the health effects of temperature on occupational injuries have been scarcely investigated. A nationwide epidemiological study was carried out to estimate the risk of injuries for workers exposed to extreme temperature and identify economic sectors and jobs most at risk. Materials and methods The daily time series of work-related injuries in the industrial and services sector from the Italian national workers' compensation authority (INAIL) were collected for each of the 8090 Italian municipalities in the period 2006–2010. Daily air temperatures with a 1\,×\,1\,km resolution derived from satellite land surface temperature data using mixed regression models were included. Distributed lag non-linear models (DLNM) were used to estimate the association between daily mean air temperature and injuries at municipal level. A meta-analysis was then carried out to retrieve national estimates. The relative risk (RR) and attributable cases of work-related injuries for an increase in mean temperature above the 75th percentile (heat) and for a decrease below the 25th percentile (cold) were estimated. Effect modification by gender, age, firm size, economic sector and job type were also assessed. Results The study considered 2,277,432 occupational injuries occurred in Italy in the period 2006–2010. There were significant effects for both heat and cold temperatures. The overall relative risks (RR) of occupational injury for heat and cold were 1.17 (95\% CI: 1.14–1.21) and 1.23 (95\% CI: 1.17–1.30), respectively. The number of occupational injuries attributable to temperatures above and below the thresholds was estimated to be 5211 per year. A higher risk of injury on hot days was found among males and young (age 15–34) workers occupied in small-medium size firms, while the opposite was observed on cold days. Construction workers showed the highest risk of injuries on hot days while fishing, transport, electricity, gas and water distribution workers did it on cold days. Conclusions Prevention of the occupational exposure to extreme temperatures is a concern for occupational health and safety policies, and will become a critical issue in future years considering climate change. Epidemiological studies may help identify vulnerable jobs, activities and workers in order to define prevention plans and training to reduce occupational exposure to extreme temperature and the risk of work-related injuries.},
  keywords = {adolescent,Adolescent,adult,Adult,age,air temperature,Article,Atmospheric temperature,Case-crossover study,climate change,Climate change,cold,Cold impacts,Cold Temperature,construction industry,Construction workers,controlled study,disease association,Effect modifications,environmental impact,environmental temperature,Epidemiologic Studies,Epidemiological studies,epidemiology,estimation method,extreme event,Extreme outdoor air temperature,female,geographic distribution,groups by age,health risk,heat,Heat impacts,high temperature,Hot Temperature,human,Humans,Industrial hygiene,Italy,Land surface temperature,low temperature,major clinical study,male,Male,Mean air temperatures,middle aged,nonlinear system,occupational accident,occupational exposure,Occupational exposure,Occupational Exposure,occupational health,Occupational Health,Occupational health and safety,Occupational injuries,Occupational Injuries,Occupational risks,priority journal,proportional hazards model,Regression analysis,risk,Risk,risk factor,Risk perception,Service industry,sex difference,temperature effect,training,Water supply systems,Work-related Injuries,Workers' compensation,young adult,Young Adult}
