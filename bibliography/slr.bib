@article{gimenez-garciaChronicleForecastFlood2022,
  title = {Chronicle of a Forecast Flood: Exposure and Vulnerability on the South-East Coast of {{Spain}}},
  shorttitle = {Chronicle of a Forecast Flood},
  author = {Giménez-García, R. and Ruiz-Álvarez, V. and García-Marín, R.},
