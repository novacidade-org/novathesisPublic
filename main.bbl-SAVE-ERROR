      \strng{namehash}{51007c55b8199a18eaf3b505411af938}
      \strng{fullhash}{ad78d484aeeec4a0571bf21d04fec1e7}
      \strng{bibnamehash}{ad78d484aeeec4a0571bf21d04fec1e7}
      \strng{authorbibnamehash}{ad78d484aeeec4a0571bf21d04fec1e7}
