      \strng{namehash}{2b9318fb1d33ec0b1a48161571a7082d}
      \strng{fullhash}{ba6d7d522872e94fcbe62e68d575475b}
      \strng{bibnamehash}{ba6d7d522872e94fcbe62e68d575475b}
      \strng{authorbibnamehash}{ba6d7d522872e94fcbe62e68d575475b}
      \strng{authornamehash}{2b9318fb1d33ec0b1a48161571a7082d}
