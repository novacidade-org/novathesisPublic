      \field{issn}{0048-9697}
      \field{journaltitle}{Science of The Total Environment}
      \field{month}{6}
      \field{shortjournal}{Science of The Total Environment}
      \field{shorttitle}{Effects of Hourly Precipitation and Temperature on Road Traffic Casualties in {{Shenzhen}}, {{China}} (2010–2016)}
