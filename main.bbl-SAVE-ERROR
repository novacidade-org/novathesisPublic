      \strng{namehash}{bd042e9e88fa33ffe95ff4f19fb49cc7}
      \strng{fullhash}{125a45fe03dd7c7b78a940f1e25e0cb3}
      \strng{bibnamehash}{125a45fe03dd7c7b78a940f1e25e0cb3}
      \strng{authorbibnamehash}{125a45fe03dd7c7b78a940f1e25e0cb3}
      \strng{authornamehash}{bd042e9e88fa33ffe95ff4f19fb49cc7}
