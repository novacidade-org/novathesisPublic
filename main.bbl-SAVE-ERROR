      \strng{namehash}{51779e6bb0432090238653ce4890887c}
      \strng{fullhash}{b3a86b7471d4e7e324beeb1054ca12aa}
      \strng{bibnamehash}{b3a86b7471d4e7e324beeb1054ca12aa}
      \strng{authorbibnamehash}{b3a86b7471d4e7e324beeb1054ca12aa}
