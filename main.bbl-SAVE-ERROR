      \strng{namehash}{159ac23032fa6ed564538edbabf2eef6}
      \strng{fullhash}{503abcd12738a329f25f84531d61491f}
      \strng{bibnamehash}{503abcd12738a329f25f84531d61491f}
      \strng{authorbibnamehash}{503abcd12738a329f25f84531d61491f}
      \strng{authornamehash}{159ac23032fa6ed564538edbabf2eef6}
      \strng{authorfullhash}{503abcd12738a329f25f84531d61491f}
      \field{sortinit}{E}
