      \strng{namehash}{7dc2e29f2339be74ae256fda4541d47f}
      \strng{fullhash}{dd90ed5c0f2bb98c867f5f9d12970519}
      \strng{bibnamehash}{dd90ed5c0f2bb98c867f5f9d12970519}
      \strng{authorbibnamehash}{dd90ed5c0f2bb98c867f5f9d12970519}
      \strng{authornamehash}{7dc2e29f2339be74ae256fda4541d47f}
