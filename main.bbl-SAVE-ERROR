      \strng{namehash}{08b755992a668101d3703524d98652db}
      \strng{fullhash}{b6bb25e1c4db5dffcf12d4169b609b31}
      \strng{bibnamehash}{b6bb25e1c4db5dffcf12d4169b609b31}
      \strng{authorbibnamehash}{b6bb25e1c4db5dffcf12d4169b609b31}
