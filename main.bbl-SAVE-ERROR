      \strng{namehash}{fcaeddbff3f6c304e0d1b0d2c122a2e7}
      \strng{fullhash}{2713f9226bc0e0d6d880fd66fd1109fe}
      \strng{bibnamehash}{925e621d5a37bd807ea8e63e09445660}
      \strng{authorbibnamehash}{925e621d5a37bd807ea8e63e09445660}
      \strng{authornamehash}{fcaeddbff3f6c304e0d1b0d2c122a2e7}
      \strng{authorfullhash}{2713f9226bc0e0d6d880fd66fd1109fe}
      \field{sortinit}{T}
