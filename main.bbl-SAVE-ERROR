      \strng{namehash}{cd2ded9f08320d74788babda9cf0c7b2}
      \strng{fullhash}{17ffb1575a6e4eb66ab9245c6e48256d}
      \strng{bibnamehash}{17ffb1575a6e4eb66ab9245c6e48256d}
      \strng{authorbibnamehash}{17ffb1575a6e4eb66ab9245c6e48256d}
