      \strng{fullhash}{b7ec4b01699033c0e5a13cd97a5adcd9}
      \strng{bibnamehash}{b7ec4b01699033c0e5a13cd97a5adcd9}
      \strng{authorbibnamehash}{b7ec4b01699033c0e5a13cd97a5adcd9}
