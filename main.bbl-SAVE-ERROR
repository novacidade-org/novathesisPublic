      \strng{namehash}{09b73c76022d2324f197ac7082477cf0}
      \strng{fullhash}{5a3c3ec34daa20242c291364c1f8bb0d}
      \strng{bibnamehash}{5a3c3ec34daa20242c291364c1f8bb0d}
      \strng{authorbibnamehash}{5a3c3ec34daa20242c291364c1f8bb0d}
