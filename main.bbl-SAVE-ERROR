      \strng{fullhash}{0fa65d738a96bf1f8940bb22c36d8f5c}
      \strng{bibnamehash}{0fa65d738a96bf1f8940bb22c36d8f5c}
      \strng{authorbibnamehash}{0fa65d738a96bf1f8940bb22c36d8f5c}
      \strng{authornamehash}{5d1f720b5e9734fe5ec2e86ceefba02f}
