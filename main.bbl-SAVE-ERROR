      \strng{namehash}{3c9021505e92c45970b20f65af786162}
      \strng{fullhash}{a133a4323f8eb94c5092e72f93c2154f}
      \strng{bibnamehash}{a133a4323f8eb94c5092e72f93c2154f}
      \strng{authorbibnamehash}{a133a4323f8eb94c5092e72f93c2154f}
