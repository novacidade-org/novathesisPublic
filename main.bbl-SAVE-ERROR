      \field{issn}{0001-4575}
      \field{journaltitle}{Accident Analysis \& Prevention}
      \field{month}{3}
      \field{shortjournal}{Accident Analysis \& Prevention}
      \field{title}{Traffic Accident Severity Analysis with Rain-Related Factors Using Structural Equation Modeling – {{A}} Case Study of {{Seoul City}}}
