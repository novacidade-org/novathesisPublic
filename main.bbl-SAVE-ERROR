      \strng{namehash}{07ce2bb9d98b94c96e01e2d1ce59c41e}
      \strng{fullhash}{693841f09bfd1e7d050841815c662865}
      \strng{bibnamehash}{693841f09bfd1e7d050841815c662865}
      \strng{authorbibnamehash}{693841f09bfd1e7d050841815c662865}
