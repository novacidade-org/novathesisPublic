      \strng{namehash}{3c2355070ebc2e881ac620f1da6a97e0}
      \strng{fullhash}{f6e968aa03fa14cdc2fb9f7a0d244b2d}
      \strng{bibnamehash}{f6e968aa03fa14cdc2fb9f7a0d244b2d}
      \strng{authorbibnamehash}{f6e968aa03fa14cdc2fb9f7a0d244b2d}
      \strng{authornamehash}{3c2355070ebc2e881ac620f1da6a97e0}
      \strng{authorfullhash}{f6e968aa03fa14cdc2fb9f7a0d244b2d}
      \field{sortinit}{V}
