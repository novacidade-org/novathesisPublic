      \strng{namehash}{8ccabdf020ab3dad175c69d054fecb29}
      \strng{fullhash}{e8bb787075f40b7380dad168e7c7bb9d}
      \strng{bibnamehash}{e8bb787075f40b7380dad168e7c7bb9d}
