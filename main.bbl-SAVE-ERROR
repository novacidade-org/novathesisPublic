      \field{issn}{0018-7208}
      \field{journaltitle}{Human Factors}
      \field{langid}{english}
      \field{month}{10}
      \field{number}{5}
      \field{shortjournal}{Hum Factors}
      \field{title}{A {{Meta-Analysis}} of {{Performance Response Under Thermal Stressors}}}
      \field{urlday}{2}
      \field{urlmonth}{10}
      \field{urlyear}{2025}
      \field{volume}{49}
      \field{year}{2007}
      \field{dateera}{ce}
