      \field{shorttitle}{Temperature {{Variability}} and the {{Macroeconomy}}}
      \field{title}{Temperature {{Variability}} and the {{Macroeconomy}}: {{A World Tour}}}
      \field{urlday}{20}
      \field{urlmonth}{10}
