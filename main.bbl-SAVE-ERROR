      \strng{namehash}{1baa0f740297b6560e9d6e042491e3ee}
      \strng{fullhash}{ea455c56eef4f8b469352edf633758c2}
      \strng{bibnamehash}{ea455c56eef4f8b469352edf633758c2}
      \strng{authorbibnamehash}{ea455c56eef4f8b469352edf633758c2}
