    \endentry
    \entry{triccoPRISMAExtensionScoping2018}{article}{}
      \name{author}{28}{}{%
        {{un=0,uniquepart=base,hash=0b396572e13e5a8b08e1ee1d493aaa2a}{%
           family={Tricco},
