      \strng{namehash}{91850c72c1aa9f6be5c60dbf3e8fb733}
      \strng{fullhash}{c2e117fca9e3729029820dee0addddcb}
      \strng{bibnamehash}{c2e117fca9e3729029820dee0addddcb}
      \strng{authorbibnamehash}{c2e117fca9e3729029820dee0addddcb}
      \strng{authornamehash}{91850c72c1aa9f6be5c60dbf3e8fb733}
      \strng{authorfullhash}{c2e117fca9e3729029820dee0addddcb}
      \field{sortinit}{C}
