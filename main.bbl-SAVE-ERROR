      \strng{namehash}{1921a3b8abc647681287998435f8e7dc}
      \strng{fullhash}{43ed232c814185346bd56ff70c7534f9}
      \strng{bibnamehash}{43ed232c814185346bd56ff70c7534f9}
      \strng{authorbibnamehash}{43ed232c814185346bd56ff70c7534f9}
