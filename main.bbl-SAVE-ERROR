      \strng{namehash}{1a859f2206bb14e31474965856d46205}
      \strng{fullhash}{8c4c60516564bc62d4f070d4d2a9af41}
      \strng{bibnamehash}{8c4c60516564bc62d4f070d4d2a9af41}
      \strng{authorbibnamehash}{8c4c60516564bc62d4f070d4d2a9af41}
      \strng{authornamehash}{1a859f2206bb14e31474965856d46205}
      \strng{authorfullhash}{8c4c60516564bc62d4f070d4d2a9af41}
      \field{extraname}{3}
      \field{sortinit}{K}
