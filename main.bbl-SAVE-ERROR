      \strng{namehash}{c8ff55052140ccaf5b8b3d60eaa0085a}
      \strng{fullhash}{e9deefea725ec4f3bebec0498a37cc15}
      \strng{bibnamehash}{e9deefea725ec4f3bebec0498a37cc15}
      \strng{authorbibnamehash}{e9deefea725ec4f3bebec0498a37cc15}
