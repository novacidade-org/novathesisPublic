      \strng{namehash}{25ed7f781a1374f74a63278c4c7c7561}
      \strng{fullhash}{e8312cdf1e761f6fecf1b2307bdba2d7}
      \strng{bibnamehash}{e8312cdf1e761f6fecf1b2307bdba2d7}
      \strng{authorbibnamehash}{e8312cdf1e761f6fecf1b2307bdba2d7}
