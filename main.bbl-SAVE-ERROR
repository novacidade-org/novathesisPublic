    \entry{bigernaEstimatingTemperatureEffects2018}{article}{}
      \name{author}{1}{}{%
        {{un=0,uniquepart=base,hash=5002e23c015e787f3cb97c9af4af9e0c}{%
           family={Bigerna},
           familyi={B\bibinitperiod},
