      \strng{namehash}{9e05ca1c6c5bc15c8737b862abd9aa06}
      \strng{fullhash}{8b3e7e355a7672eadd3a73b62b5f94cc}
      \strng{bibnamehash}{8b3e7e355a7672eadd3a73b62b5f94cc}
