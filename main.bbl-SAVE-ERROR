      \strng{namehash}{417f3859371fa70c4ee670f150bd9ab5}
      \strng{fullhash}{34f1d3cff4640ec3499c4b4148a230e8}
      \strng{bibnamehash}{34f1d3cff4640ec3499c4b4148a230e8}
      \strng{authorbibnamehash}{34f1d3cff4640ec3499c4b4148a230e8}
