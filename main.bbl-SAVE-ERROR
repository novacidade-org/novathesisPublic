      \strng{namehash}{064c78c930f9a3dcad423f460ce3e351}
      \strng{fullhash}{9b5aec0cf22db2b0954ec3c8db9b1770}
      \strng{bibnamehash}{9b5aec0cf22db2b0954ec3c8db9b1770}
      \strng{authorbibnamehash}{9b5aec0cf22db2b0954ec3c8db9b1770}
      \strng{authornamehash}{064c78c930f9a3dcad423f460ce3e351}
      \strng{authorfullhash}{9b5aec0cf22db2b0954ec3c8db9b1770}
      \field{sortinit}{X}
      \field{sortinithash}{1965c258adceecf23ce3d67b05113442}
