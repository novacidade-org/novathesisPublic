      \strng{namehash}{ffaa6737e98a0219fcb27d2a72909268}
      \strng{fullhash}{6d736f2b002a3a12db5269f25578c6ea}
      \strng{bibnamehash}{6d736f2b002a3a12db5269f25578c6ea}
      \strng{authorbibnamehash}{6d736f2b002a3a12db5269f25578c6ea}
