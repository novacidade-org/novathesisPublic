      \field{journaltitle}{Injury Epidemiology}
      \field{langid}{english}
      \field{number}{1}
      \field{shortjournal}{Inj. Epidemiol.}
      \field{title}{The Risks of Warm Nights and Wet Days in the Context of Climate Change: Assessing Road Safety Outcomes in {{Boston}}, {{USA}} and {{Santo Domingo}}, {{Dominican Republic}}}
      \field{volume}{8}
      \field{year}{2021}
      \field{dateera}{ce}
