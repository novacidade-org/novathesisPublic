      \strng{fullhash}{1c1cbd7d505e465abb5e83859f6af097}
      \strng{bibnamehash}{1c1cbd7d505e465abb5e83859f6af097}
      \strng{authorbibnamehash}{1c1cbd7d505e465abb5e83859f6af097}
