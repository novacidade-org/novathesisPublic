      \strng{namehash}{b19d1273e682e827d6f100294d4ab9c8}
      \strng{fullhash}{b19d1273e682e827d6f100294d4ab9c8}
      \strng{bibnamehash}{b19d1273e682e827d6f100294d4ab9c8}
      \strng{authorbibnamehash}{b19d1273e682e827d6f100294d4ab9c8}
      \strng{authornamehash}{b19d1273e682e827d6f100294d4ab9c8}
