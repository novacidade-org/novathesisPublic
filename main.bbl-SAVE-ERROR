      \strng{namehash}{667aa022bd613f0bcb0d5019c2b3d65a}
      \strng{fullhash}{6c33fbff50fd0974e4a74b62975c3472}
      \strng{bibnamehash}{6c33fbff50fd0974e4a74b62975c3472}
      \strng{authorbibnamehash}{6c33fbff50fd0974e4a74b62975c3472}
      \strng{authornamehash}{667aa022bd613f0bcb0d5019c2b3d65a}
