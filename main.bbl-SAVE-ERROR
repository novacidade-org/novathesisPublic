      \strng{namehash}{ffab56639a0358f914171e9b28981dbd}
      \strng{fullhash}{ffab56639a0358f914171e9b28981dbd}
      \strng{bibnamehash}{ffab56639a0358f914171e9b28981dbd}
      \strng{authorbibnamehash}{ffab56639a0358f914171e9b28981dbd}
