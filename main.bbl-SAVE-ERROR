      \strng{namehash}{e91edb94cdd22af4f41338618cd64ffd}
      \strng{fullhash}{e91edb94cdd22af4f41338618cd64ffd}
      \strng{bibnamehash}{e91edb94cdd22af4f41338618cd64ffd}
      \strng{authorbibnamehash}{e91edb94cdd22af4f41338618cd64ffd}
