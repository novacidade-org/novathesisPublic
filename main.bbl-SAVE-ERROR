      \strng{namehash}{edbb651e44d4561bba07189a034809b4}
      \strng{fullhash}{5dc968c1d3b24abab91f55c135ecdb22}
      \strng{bibnamehash}{5dc968c1d3b24abab91f55c135ecdb22}
      \strng{authorbibnamehash}{5dc968c1d3b24abab91f55c135ecdb22}
