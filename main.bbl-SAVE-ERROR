    \entry{allaireSocioeconomicImpactsFlooding2018}{article}{}
      \name{author}{1}{}{%
        {{un=0,uniquepart=base,hash=dfcba1450b43a44272511b65cbb29a8b}{%
           family={Allaire},
           familyi={A\bibinitperiod},
