      \strng{namehash}{e8549a4f9ea3f408bd339af8ce1c6c4d}
      \strng{fullhash}{1ac913949934abd29e7acbb8d11989b7}
      \strng{bibnamehash}{1ac913949934abd29e7acbb8d11989b7}
      \strng{authorbibnamehash}{1ac913949934abd29e7acbb8d11989b7}
      \strng{authornamehash}{e8549a4f9ea3f408bd339af8ce1c6c4d}
