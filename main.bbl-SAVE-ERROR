      \field{shorttitle}{{{PRISMA Extension}} for {{Scoping Reviews}} ({{PRISMA-ScR}})}
      \field{title}{{{PRISMA Extension}} for {{Scoping Reviews}} ({{PRISMA-ScR}}): {{Checklist}} and {{Explanation}}}
