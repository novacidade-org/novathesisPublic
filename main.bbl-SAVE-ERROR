      \strng{namehash}{a3ec0e3b7deedc8eaeb1a51a07318fa2}
      \strng{fullhash}{a3ec0e3b7deedc8eaeb1a51a07318fa2}
      \strng{bibnamehash}{a3ec0e3b7deedc8eaeb1a51a07318fa2}
      \strng{authorbibnamehash}{a3ec0e3b7deedc8eaeb1a51a07318fa2}
      \strng{authornamehash}{a3ec0e3b7deedc8eaeb1a51a07318fa2}
      \strng{authorfullhash}{a3ec0e3b7deedc8eaeb1a51a07318fa2}
