      \strng{namehash}{3661b0d9a73a2be17bc8c450a13f5655}
      \strng{fullhash}{9fccd8452a2e51530873ca3e5251316e}
      \strng{bibnamehash}{9fccd8452a2e51530873ca3e5251316e}
      \strng{authorbibnamehash}{9fccd8452a2e51530873ca3e5251316e}
